@model IEnumerable<InternetPcPartDatabase.Models.Part>
@using Microsoft.EntityFrameworkCore
@inject IHttpContextAccessor SessionData
@inject InternetPcPartDatabase.Data.PartContext db

@{ 
    int? userID = SessionData.HttpContext.Session.GetInt32("UserId");
    string username = null;
    if (userID.HasValue)
    {
        string sessionUserName = SessionData.HttpContext.Session.GetString("Email");
        if (sessionUserName == null)
        {
            username = await (from u in db.UserAccounts
                              where u.UserAccountId == userID
                              select u.Email).SingleOrDefaultAsync();
            SessionData.HttpContext.Session.SetString("UserId", username);
        }
        else
        {
            username = sessionUserName;
        }
    }
}

@{
    ViewData["Title"] = "Part Collection";
}

<h1>Part Collection</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PartType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MSRP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PartType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MSRP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                    @if (userID != null) {
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.PartId">Edit</a>
                    }
                <a class ="btn btn-secondary" asp-action="Details" asp-route-id="@item.PartId">Details</a>
                    @if (userID != null)
                    {
                        <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.PartId">Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
