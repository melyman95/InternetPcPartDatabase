@model InternetPcPartDatabase.Models.Part

@{
    ViewData["Title"] = "Part Details";
}

<div class="text-center">

<h1>Details about @Model.PartName</h1>

<div>
    <hr class="align-content-lg-center"/>
    <dl class="row border-bottom border-top">
        <dt class = "col-sm-2 border-bottom border-top">
            @Html.DisplayNameFor(model => model.PartId)
        </dt>
        <dd class = "col-sm-10 border-bottom border-top">
            @Html.DisplayFor(model => model.PartId)
        </dd>
        <dt class = "col-sm-2 border-bottom border-top">
            @Html.DisplayNameFor(model => model.PartType)
        </dt>
        <dd class = "col-sm-10 border-bottom border-top">
            @Html.DisplayFor(model => model.PartType)
        </dd>
        <dt class = "col-sm-2 border-bottom border-top">
            @Html.DisplayNameFor(model => model.PartName)
        </dt>
        <dd class = "col-sm-10 border-bottom border-top">
            @Html.DisplayFor(model => model.PartName)
        </dd>
        <dt class = "col-sm-2 border-bottom border-top">
            @Html.DisplayNameFor(model => model.Manufacturer)
        </dt>
        <dd class = "col-sm-10 border-bottom border-top">
            @Html.DisplayFor(model => model.Manufacturer)
        </dd>
        <dt class = "col-sm-2 border-bottom border-top">
            @Html.DisplayNameFor(model => model.MSRP)
        </dt>
        <dd class = "col-sm-10 border-bottom border-top">
            @Html.DisplayFor(model => model.MSRP)
        </dd>
        <dt class = "col-sm-2 border-bottom border-top">
            @Html.DisplayNameFor(model => model.ReleaseYear)
        </dt>
        <dd class = "col-sm-10 border-bottom border-top">
            @Html.DisplayFor(model => model.ReleaseYear)
        </dd>
    </dl>
</div>
</div>
